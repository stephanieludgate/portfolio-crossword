{% extends "base/base.twig" %}

{% block page_title %}Puzzles - {{ parent() }}{% endblock %}

{% block page_description %}Puzzles{% endblock %}

{% block content %}

<div class="col-12 py-3 text-light">
    <h3>Puzzles</h3>
</div>
<div class="col-12 text-dark">
    <div class="row">
        <!-- available puzzles -->
        {% for puzzle in puzzles %}
            <div class="col-12 col-md-6 col-lg-3 pb-4">
                <div class="card h-100">
                    <img class="card-img-top" src="https://picsum.photos/500/325?random={{ puzzle.id }}" alt="">
                    <div class="card-body">
                        <h6 class="card-title">{{ puzzle.name|replace({'_': ' '})|upper }}</h6>
                    </div>
                    <div class="card-footer">
                        {% if puzzle.id > 1 %}
                            <button class="btn btn-secondary" href="puzzles/{{ puzzle.name }}"
                            disabled>Locked&nbsp;&nbsp;<i class="fas fa-lock"></i></button>
                        {% else %}
                            <a class="btn btn-success" href="puzzles/{{ puzzle.name }}"
                            >{% if 'SESSION.loggedIn'|f3 == true %}Play{% else %} View {% endif %}</a>
                        {% endif %}
                        

                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>

{% endblock %}