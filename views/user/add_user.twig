{% extends "base/base.twig" %}

{% block page_title %}New User - {{ parent() }}{% endblock %}

{% block page_description %}New User{% endblock %}

{% block content %}

<div class="col-6 offset-3 my-5 p-4 bg-light text-dark border border-dark rounded-lg" id="loginForm">
    <form method="POST" action="">
        <div class="form-group">
            <label>Email Address</label>
            <input type="text" class="form-control" name="email" value="{{ user.email }}">
            {% if  messages_email is not empty %}
                <small id="emailHelp" class="form-text text-muted"><i class="fas fa-exclamation"></i>&nbsp;&nbsp;{{ messages_email }}</small>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Password</label>
            <input type="password" class="form-control" name="password_1" value="">
            {% if  messages_password is not empty %}
                <small id="emailHelp" class="form-text text-muted"><i class="fas fa-exclamation"></i>&nbsp;&nbsp;{{ messages_password }}</small>
            {% endif %}
        </div>
        <div class="form-group">
            <label>Confirm Password</label>
            <input type="password" class="form-control" name="password_2" value="">
        </div>
        <div class="form-group">
            <label>Username</label>
            <input type="text" class="form-control" name="username" value="{{ user.username}}">
            {% if  messages_username is not empty %}
                <small id="emailHelp" class="form-text text-muted"><i class="fas fa-exclamation"></i>&nbsp;&nbsp;{{ messages_username }}</small>
            {% endif %}
        </div>
        <button type="submit" class="btn btn-success mt-3">Save</button>
    </form>
</div>

{% endblock %}